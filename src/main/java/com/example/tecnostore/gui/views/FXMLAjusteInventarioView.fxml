<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tecnostore.gui.controller.FXMLAjusteInventarioViewController">

    <!-- TOP: TÃ­tulo -->
    <top>
        <VBox spacing="5">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label text="Ajuste de Inventario"
                       style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <Label text="Ingrese los datos para ajustar existencias"
                       style="-fx-font-size: 14px;"/>
            </children>
        </VBox>
    </top>

    <!-- CENTER: Formulario -->
    <center>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <children>

                <Label text="ID Producto:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtIdProducto"
                           promptText="ID"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNombreProducto"
                           promptText="Nombre del producto"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Existencia actual:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtExistenciaActual"
                           promptText="Existencia actual"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Cantidad a ajustar:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCantidadAjuste"
                           promptText="Cantidad (+ o -)"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Motivo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextArea fx:id="txtMotivo"
                          promptText="Motivo del ajuste"
                          prefRowCount="3"
                          GridPane.rowIndex="4" GridPane.columnIndex="1"/>

            </children>
        </GridPane>
    </center>

    <!-- BOTTOM: Botones -->
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Button fx:id="btnAplicar"
                        text="Aplicar ajuste"
                        onAction="#onAplicarAjuste"/>
                <Button fx:id="btnCancelar"
                        text="Cancelar"
                        onAction="#onCancelar"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>

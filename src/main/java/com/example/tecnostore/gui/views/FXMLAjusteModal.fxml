<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" spacing="15" fx:controller="com.example.tecnostore.gui.controller.FXMLAjusteModalController">
    <children>
        <Label text="Ajuste de Inventario" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
        <GridPane hgap="10" vgap="10" padding="10">
            <children>
                <Label text="Producto:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <ComboBox fx:id="productoCombo" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="Tipo del Movimiento:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <HBox spacing="10" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <children>
                        <RadioButton fx:id="entradaRadio" text="Entrada" />
                        <RadioButton fx:id="salidaRadio" text="Salida" />
                    </children>
                </HBox>
                <Label text="Tipo de Ajuste:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <children>
                        <ComboBox fx:id="tipoAjusteCombo" />
                        <Label text="Cantidad:" />
                        <TextField fx:id="cantidadField" />
                    </children>
                </HBox>
                <Label text="RazÃ³n del Movimiento:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextArea fx:id="razonArea" prefRowCount="3" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        <Label fx:id="realizadoPor" style="-fx-font-style: italic;" />
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Button text="Cancelar" onAction="#onCancelar" />
                <Button text="Confirmar Ajuste" onAction="#onConfirmar" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>

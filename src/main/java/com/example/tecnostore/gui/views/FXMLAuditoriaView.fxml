<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tecnostore.gui.controller.FXMLAuditoriaViewController" spacing="15" padding="20">
    <children>
        <Label text="Logs de Auditoría" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
        <Label text="Filtros" />
        <GridPane hgap="10" vgap="10" padding="10" style="-fx-border-color: lightgray; -fx-padding: 10px;">
            <children>
                <Label text="Fecha Inicio:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <DatePicker GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="Fecha Fin:" GridPane.rowIndex="0" GridPane.columnIndex="2" />
                <DatePicker GridPane.rowIndex="0" GridPane.columnIndex="3" />
                <Label text="Usuario:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Label text="Acción:" GridPane.rowIndex="1" GridPane.columnIndex="2" />
                <TextField GridPane.rowIndex="1" GridPane.columnIndex="3" />
                <Label text="Módulo:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField GridPane.rowIndex="2" GridPane.columnIndex="1" />
                <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="3">
                    <children>
                        <Button text="Limpiar" onAction="#onLimpiar" />
                        <Button text="Buscar" onAction="#onBuscar" />
                    </children>
                </HBox>
            </children>
        </GridPane>
        <Label text="Resultado" />
        <TableView fx:id="resultTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="Fecha y Hora" />
                <TableColumn text="Usuario" />
                <TableColumn text="Acción" />
                <TableColumn text="Módulo" />
            </columns>
        </TableView>
        <Label text="Página 1 de..." />
    </children>
</VBox>

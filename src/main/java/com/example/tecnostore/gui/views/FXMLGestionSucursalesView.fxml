<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tecnostore.gui.controller.FXMLGestionSucursalesViewController">

    <top>
        <VBox spacing="8">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Gestión de Sucursales" />

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label text="Buscar:" />
                        <TextField fx:id="searchField" promptText="Nombre o ciudad" />
                        <Button onAction="#onBuscar" text="Buscar" />
                        <Button onAction="#onLimpiar" text="Limpiar" />
                    </children>
                    <!-- AQUÍ podrías haber tenido padding="0,10,0,0" -->
                    <padding>
                        <Insets bottom="0" left="0" right="10" top="0" />
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>

    <center>
        <TableView fx:id="branchTable">
            <columns>
                <TableColumn fx:id="colId" prefWidth="80" text="ID" />
                <TableColumn fx:id="colNombre" prefWidth="150" text="Nombre" />
                <TableColumn fx:id="colDireccion" prefWidth="200" text="Dirección" />
                <TableColumn fx:id="colTelefono" prefWidth="120" text="Teléfono" />
                <TableColumn fx:id="colActivo" prefWidth="80" text="Activo" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
                <Button fx:id="agregarButton" onAction="#onAgregar" text="Agregar" />
                <Button fx:id="editarButton" onAction="#onEditar" text="Editar" />
                <Button fx:id="eliminarButton" onAction="#onEliminar" text="Eliminar" />
                <Button onAction="#onCerrar" text="Cerrar" />
            </children>
        </HBox>
    </bottom>

</BorderPane>

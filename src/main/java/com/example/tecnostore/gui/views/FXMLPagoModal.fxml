<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="15" fx:controller="com.example.tecnostore.gui.controller.FXMLPagoModalController">
    <children>
        <Label text="Finalizar Compra" style="-fx-font-weight: bold; -fx-font-size: 18px;" />
        <GridPane hgap="10" vgap="10" padding="10">
            <children>
                <Label text="MÃ©todo de pago:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <ComboBox fx:id="metodoPago" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="Cantidad a Pagar:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <Label fx:id="totalValue" GridPane.rowIndex="1" GridPane.columnIndex="1" />

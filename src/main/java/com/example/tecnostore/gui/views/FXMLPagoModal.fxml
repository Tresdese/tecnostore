<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tecnostore.gui.controller.FXMLPagoModalController">
    <children>
        <Label text="Finalizar Compra">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="MÃ©todo de pago:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <ComboBox fx:id="metodoPago" prefWidth="150.0" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Cantidad a Pagar:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <Label fx:id="totalValue" text="\$0.00" GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>

                <Label text="Cantidad Recibida:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="receivedField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Cambio:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <Label fx:id="changeValue" text="\$0.00" textFill="#00a11b" GridPane.rowIndex="3" GridPane.columnIndex="1">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
        </GridPane>

        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button text="Cancelar" onAction="#onCancelar" />
                <Button text="Confirmar" onAction="#onConfirmar" defaultButton="true" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>

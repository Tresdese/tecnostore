<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="15" fx:controller="com.example.tecnostore.gui.controller.FXMLProductoModalController">
    <children>
        <Label fx:id="titleLabel" />
        <GridPane hgap="10" vgap="10" padding="10">
            <children>
                <Label text="Código:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="codigoField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="Descripción:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="descripcionField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Label text="Marca:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="marcaField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                <Label text="Precio:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="precioField" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                <Label text="Cantidad:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="cantidadField" GridPane.rowIndex="4" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button text="Cancelar" onAction="#onCancelar" />
                <Button text="Guardar" onAction="#onGuardar" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>

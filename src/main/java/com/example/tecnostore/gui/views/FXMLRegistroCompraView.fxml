<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.tecnostore.gui.controller.FXMLRegistroCompraViewController"
      spacing="20"
      alignment="CENTER"
      style="-fx-background-color: white;">

    <!-- Padding global -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- TÍTULO -->
    <Label text="Registro de Compra"
           style="-fx-font-size: 26px; -fx-font-weight: bold;"/>

    <!-- SUBTÍTULO -->
    <Label text="Ingrese la información correspondiente"
           style="-fx-font-size: 16px;"/>

    <!-- CAMPOS -->
    <VBox spacing="12">

        <children>

            <TextField fx:id="txtIdProducto"
                       promptText="ID del Producto"
                       maxWidth="300"/>

            <TextField fx:id="txtCantidad"
                       promptText="Cantidad"
                       maxWidth="300"/>

            <TextField fx:id="txtPrecioUnitario"
                       promptText="Precio Unitario"
                       maxWidth="300"/>

            <TextArea fx:id="txtDescripcion"
                      promptText="Descripción de la compra"
                      prefRowCount="3"
                      maxWidth="300"/>
        </children>

        <!-- Margen interior del contenedor -->
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

    </VBox>

    <!-- BOTONES -->
    <HBox spacing="20" alignment="CENTER">

        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <children>

            <Button fx:id="btnRegistrar"
                    text="Registrar Compra"
                    prefWidth="150"
                    style="-fx-background-color: black; -fx-text-fill: white; -fx-font-size: 14px;"
                    onAction="#onRegistrar"/>

            <Button fx:id="btnCancelar"
                    text="Cancelar"
                    prefWidth="150"
                    onAction="#onCancelar"/>

        </children>

    </HBox>

</VBox>

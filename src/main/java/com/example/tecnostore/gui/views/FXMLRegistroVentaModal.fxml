<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10"
      xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.tecnostore.gui.controller.FXMLRegistroVentaModalController">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <children>

        <HBox spacing="5">
            <children>
                <TextField fx:id="searchField"
                           promptText="Buscar por código o nombre"
                           HBox.hgrow="ALWAYS" />
                <Button text="Buscar" onAction="#onBuscar" defaultButton="true" />
            </children>
        </HBox>

        <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colCodigo" text="Código" />
                <TableColumn fx:id="colDescripcion" text="Descripción" />
                <TableColumn fx:id="colPrecio" text="Precio" />
                <TableColumn fx:id="colStock" text="Stock" />
                <TableColumn fx:id="colCantidad" text="Cantidad" />
                <TableColumn fx:id="colImporte" text="Importe" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Button fx:id="btnAumentar" text="Aumentar" onAction="#onAumentarCantidad" />
                <Button fx:id="btnDisminuir" text="Disminuir" onAction="#onDisminuirCantidad" />
                <Button fx:id="btnQuitar" text="Quitar" onAction="#onQuitarProducto" />
            </children>
        </HBox>

        <BorderPane>
            <padding>
                <Insets top="10" right="0" bottom="0" left="0"/>
            </padding>

            <left>
                <GridPane hgap="10" vgap="5"
                          style="-fx-border-color: lightgray; -fx-padding: 10px;">
                    <children>
                        <Label text="Subtotal:"
                               GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <!-- SIN $ -->
                        <Label fx:id="subtotalLabel" text="0.00"
                               GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="IVA:"
                               GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <!-- SIN $ -->
                        <Label fx:id="ivaLabel" text="0.00"
                               GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="TOTAL:" style="-fx-font-weight: bold;"
                               GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <!-- SIN $ -->
                        <Label fx:id="totalLabel" text="0.00"
                               style="-fx-font-weight: bold; -fx-text-fill: green;"
                               GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    </children>
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
            </left>

            <right>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Cancelar Venta" onAction="#onCancelarVenta" />
                        <Button text="Hacer Pago" onAction="#onHacerPago" />
                    </children>
                </HBox>
            </right>
        </BorderPane>

    </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="10"
      fx:controller="com.example.tecnostore.gui.controller.FXMLRegistroVentaModalController">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <children>

        <HBox spacing="5">
            <children>
                <TextField fx:id="searchField"
                           promptText="Buscar por cÃ³digo o nombre"
                           HBox.hgrow="ALWAYS" />
                <Button text="Buscar" onAction="#onBuscar" defaultButton="true" />
            </children>
        </HBox>

        <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colCodigo" text="Usuario" />
                <TableColumn fx:id="colDescripcion" text="Total" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <BorderPane>
            <padding>
                <Insets top="10" right="0" bottom="0" left="0"/>
            </padding>

            <left>
                <GridPane hgap="10" vgap="5"
                          style="-fx-border-color: lightgray; -fx-padding: 10px;">
                    <children>
                        <Label text="Subtotal:"
                               GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <Label fx:id="subtotalLabel" text="\$0.00"
                               GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="IVA:"
                               GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <Label fx:id="ivaLabel" text="\$0.00"
                               GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="TOTAL:" style="-fx-font-weight: bold;"
                               GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <Label fx:id="totalLabel" text="\$0.00" style="-fx-font-weight: bold; -fx-text-fill: green;"
                               GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    </children>
                </GridPane>
            </left>

            <right>
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Agregar Venta" onAction="#onAgregarVenta" />
                        <Button text="Cancelar Venta" onAction="#onCancelarVenta" />
                        <Button text="Hacer Pago" onAction="#onHacerPago" />
                    </children>
                </HBox>
            </right>
        </BorderPane>

    </children>
</VBox>

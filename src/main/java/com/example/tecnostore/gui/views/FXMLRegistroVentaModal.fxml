<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="650.0" prefWidth="950.0" xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tecnostore.gui.controller.FXMLRegistroVentaModalController">
    <VBox spacing="15" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <Label text="REGISTRO DE VENTA (TPV)" style="-fx-font-weight: bold; -fx-text-fill: #3f51b5;">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label text="Buscar Producto (ID/Nombre):" />
                <TextField fx:id="searchField" prefWidth="250.0" promptText="Ingrese ID o Nombre" />

                <Label text="Cantidad:" />
                <TextField fx:id="quantityField" prefWidth="70.0" promptText="Cantidad" />

                <Button mnemonicParsing="false" onAction="#onAddProduct" text="Agregar" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                <Button mnemonicParsing="false" onAction="#onRemoveProduct" text="Quitar Seleccionado" style="-fx-background-color: #f44336; -fx-text-fill: white;" />
            </HBox>

            <TableView fx:id="detailsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNombreProducto" prefWidth="250.0" text="Producto" />
                    <TableColumn fx:id="colPrecio" prefWidth="100.0" text="Precio Unitario" />
                    <TableColumn fx:id="colCantidad" prefWidth="80.0" text="Cantidad" />
                    <TableColumn fx:id="colSubtotal" prefWidth="120.0" text="Subtotal" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
                <placeholder>
                    <Label text="Aún no se han añadido productos a la venta."/>
                </placeholder>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <Label text="Total a Pagar:" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="lblTotal" text="$0.00" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #f44336;" />
            </HBox>

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Button mnemonicParsing="false" onAction="#onCancelarVenta" text="Cancelar Venta" style="-fx-background-color: #9e9e9e; -fx-text-fill: white;" />
                <Button mnemonicParsing="false" onAction="#onHacerPago" text="Finalizar y Pagar" style="-fx-background-color: #00897b; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>

        </children>
    </VBox>
</AnchorPane>
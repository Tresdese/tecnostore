<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tecnostore.gui.controller.FXMLReportesViewController">

    <!-- TOP: Título y filtros -->
    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label text="Gestión de Reportes"
                       style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Tipo de reporte:"/>
                        <ComboBox fx:id="cmbTipoReporte" prefWidth="180"/>

                        <Label text="Desde:"/>
                        <DatePicker fx:id="dpDesde"/>

                        <Label text="Hasta:"/>
                        <DatePicker fx:id="dpHasta"/>

                        <Button fx:id="btnGenerar"
                                text="Generar"
                                onAction="#onGenerar"/>
                    </children>
                    <!-- Aquí ES MUY PROBABLE que tú tenías padding="10" -->
                    <padding>
                        <Insets top="5" right="0" bottom="0" left="0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </top>

    <!-- CENTER: Tabla de reportes -->
    <center>
        <TableView fx:id="tblReportes">
            <columns>
                <TableColumn fx:id="colFecha" text="Fecha" prefWidth="120"/>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="150"/>
                <TableColumn fx:id="colDescripcion" text="Descripción" prefWidth="300"/>
                <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <!-- BOTTOM: Botones -->
    <bottom>
        <VBox spacing="6">
            <padding>
                <Insets top="8" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Label fx:id="statusLabel" text="" />
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="btnVerDetalle"
                                text="Ver detalle"
                                onAction="#onVerDetalle"/>
                        <Button fx:id="btnExportar"
                                text="Exportar"
                                onAction="#onExportar"/>
                        <Button fx:id="btnCerrar"
                                text="Cerrar"
                                onAction="#onCerrar"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </bottom>

</BorderPane>

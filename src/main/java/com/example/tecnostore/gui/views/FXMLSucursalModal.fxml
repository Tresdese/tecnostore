<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="15" fx:controller="com.example.tecnostore.gui.controller.FXMLSucursalModalController">
    <children>
        <Label text="DETALLE DE SUCURSAL" style="-fx-font-weight: bold;" />
        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="nombreField" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                <Label text="Dirección:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="direccionField" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                <Label text="Teléfono:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="telefonoField" GridPane.rowIndex="2" GridPane.columnIndex="1" />
                <Label text="Estado:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <ComboBox fx:id="estadoCombo" GridPane.rowIndex="3" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button text="Cancelar" onAction="#onCancelar" />
                <Button text="Confirmar" onAction="#onConfirmar" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
</VBox>

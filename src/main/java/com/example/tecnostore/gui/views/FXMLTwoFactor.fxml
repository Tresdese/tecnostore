<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/8"
            fx:controller="com.example.tecnostore.gui.controller.FXMLTwoFactorController"
            prefWidth="340" prefHeight="200">
    <center>
        <VBox spacing="12" alignment="CENTER">
            <padding><Insets top="14" right="14" bottom="14" left="14" /></padding>
            <children>
                <Label text="Ingresa el código TOTP generado por tu app" wrapText="true" />
                <TextField fx:id="txtCodigo" promptText="Código de 6 dígitos" maxWidth="220" />
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Verificar" minWidth="100" onAction="#onVerificar" />
                    <Button text="Cancelar" minWidth="100" onAction="#onCancelar" />
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>

